    <script>
        let cart = [];
        let cartTotal = 0;
        let cartDropdownOpen = false;
        
        function addToCart(productName, price) {
            cart.push({
                name: productName, 
                price: price,
                id: Date.now() + Math.random() // Unique ID for each item
            });
            cartTotal += price;
            updateCartDisplay();
            updateCartDropdown();
            showNotification();
        }
        
        function removeFromCart(itemId) {
            const itemIndex = cart.findIndex(item => item.id === itemId);
            if (itemIndex > -1) {
        
